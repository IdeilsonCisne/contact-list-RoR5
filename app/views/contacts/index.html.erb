<div class="jumbotron">
  <h2>Contacts</h2>

  <table class="table responsible-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.id  %></td>
          <td><%= contact.name %></td>
          <td><%= contact.phone %></td>
          <td><%= link_to "Show", contact_path(contact), class:"btn btn-info" %></td>
          <td><%= link_to "Edit", edit_contact_path(contact), class:"btn btn-warning" %></td>
          <td><%= link_to "Destroy", contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        </tr>
      <% end  %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Contact', new_contact_path, class:"btn btn-primary" %>

</div>
